<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundhorizontal"
    tools:context=".ActivityMenu">

    <Button
        android:id="@+id/buttonWprowadzanieDanych"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/input3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/settings3"
        app:layout_constraintEnd_toStartOf="@+id/buttonInformacje"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonWprowadzanieDanych"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonInformacje"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/informations3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>